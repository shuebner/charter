<% if boat.available_for_boat_charter %>
  <div id="boat-charter">
    <h2>Schiffscharter</h2>
    <p>Sie kÃ¶nnen dieses Schiff zu folgenden Preisen chartern</p>
    <table>
      <tr>
        <th class="boat-price-type-heading">Charterdauer</th>
        <% seasons.each do |s| %>
          <th class="season-heading"><%= s.name %></th>
        <% end %>
      </tr>
      <% boat_price_types.each do |t| %>
        <tr>
          <td class="boat-price-type-col"><%= t.name %></td>
          <% seasons.each do |s| %>
            <td class="boat-price-col">
              <% price = boat.prices(s, t) %>
              <%= price ? number_to_currency(price.value) : "-" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>