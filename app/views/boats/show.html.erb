<h1><%= @boat.name %></h1>
<div class="clearfix">
  <%= render partial: 'image_gallery', 
    locals: { title_image: @boat.title_image, 
              other_images: @boat.other_images } %>
</div>
<div class="twocol clearfix">
  <div class="twocol-col1">
    <%= render partial: 'technical_data',
      locals: { boat: @boat } %>
  </div>
  <div class="twocol-col2">
    <%= render partial: 'boat_charter',
      locals: { boat: @boat, seasons: @seasons, 
                boat_price_types: @boat_price_types } %>   
    <%= render partial: 'trip_list',
      locals: { trips: @boat.trips } %>

 
  </div>
</div>
